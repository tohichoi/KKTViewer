    <style name="MessagesListView">
        <item name="incomingBubblePaddingTop">@dimen/text_padding</item>
        <item name="incomingBubblePaddingBottom">@dimen/text_padding</item>
        <item name="incomingTextColor">@android:color/primary_text_dark</item>
        <item name="incomingDefaultBubbleColor">#ff333333</item>
        <item name="incomingDefaultBubblePressedColor">#ff333333</item>
        <item name="incomingDefaultBubbleSelectedColor">@color/colorSecondaryDark</item>
        <item name="outcomingBubblePaddingTop">@dimen/text_padding</item>
        <item name="outcomingBubblePaddingBottom">@dimen/text_padding</item>
        <item name="outcomingTextColor">@android:color/primary_text_dark</item>
        <item name="outcomingDefaultBubbleColor">#ff222222</item>
        <item name="outcomingDefaultBubblePressedColor">#ff222222</item>
        <item name="outcomingDefaultBubbleSelectedColor">@color/colorSecondaryDark</item>
        <item name="dateHeaderTextColor">@color/colorPrimary</item>
        <item name="dateHeaderTextSize">@dimen/message_date_header_text_size</item>
        <item name="dateHeaderTextStyle">bold</item>
    </style>

    <style name="DateHeader">
        <!--        // should be defined in "MessageListView"-->
        <item name="dateHeaderTextColor">@color/colorPrimaryAccent</item>
        <item name="dateHeaderTextSize">@dimen/message_date_header_text_size</item>
        <item name="dateHeaderTextStyle">bold</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingTop">32dp</item>
